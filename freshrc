# tmux
#
fresh config/tmux/tmux.conf --file

# conky
fresh config/conky/conkyrc --file

#
# i3
#
fresh config/i3/config --file="~/.i3/config"

# i3lock wrapper
fresh bin/lock --bin

#
# backgrounds
