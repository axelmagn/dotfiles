# fresh: dotfile manager
fresh freshshell/fresh bin/fresh --bin

#
# Shell
#

# prompt 
fresh config/git/git-completion.sh
fresh shell/prompt.sh

# aliases
fresh shell/aliases.sh

# environment
fresh shell/global_env.sh
fresh shell/heroku_env.sh
# fresh shell/terminal_env.sh
fresh shell/go_env.sh
fresh shell/rust_env.sh

# man pages
fresh shell/manpages_color.sh

# cowsay fortunes
# fresh shell/fortune.sh

# bashrc
fresh config/bash/bashrc --file


#
# Git
#
fresh config/git/gitconfig --file


